<% provide(:title, 'All Boards') %>
<%= will_paginate %>

<h1>All Boards</h1>
<table class="boards">
	<tr>
		<th>Title</th>
		<th>Topics</th>
	</tr>
<% @boards.each do |board| %>
	<tr>
		<th><%= link_to board.title, board %></th>
		<th><%= board.topics.count %></th>
	</tr>
<% end %>
</table>

<%= will_paginate %>