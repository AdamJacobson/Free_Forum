<% provide(:title, @board.title) %>
<h1><%= @board.title %></h1>
<h2><%= @board.description %></h2>

<%= will_paginate @topics %>

<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Posts</th>
		<th>Last Post</th>
		<th>Created</th>
		<th>Updated</th>
	</tr>
	<%= render @topics %>
</table>

<%= will_paginate @topics %>

<hr/>

<% if signed_in? %>
	<%= link_to "Create new topic", new_board_topic_path(@board) %>
<% end %>