
<tr>
	<td class="column topic-title">
		<% if topic.sticky? %>
			<%= "Sticky: " %>
		<% end %>
		<%= link_to topic.title, topic_path(topic) %>
		<% if topic.locked? %>
			<b>Locked</b>
		<% end %>
	</td>
	<td class="column topic-author"><%= link_to topic.user.username, topic.user %></td>
	<td class="column topic-posts"><%= topic.posts.count %></td>
	<td class="column topic-last-post">
		<%= link_to "#{time_ago_in_words(topic.posts.last.created_at)} ago", topic.posts.last.permalink %><br/>
		<%= link_to "#{topic.posts.last.user.username}", user_path(topic.posts.last.user) %>
	</td>
	<td class="column topic-created"><%= time_ago_in_words(topic.created_at) %> ago</td>
</tr>