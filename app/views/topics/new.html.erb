<h1>Create new topic</h1>

Return to <%= link_to @board.title, @board %>

<div>
	<%= form_for(:topic) do |f| %>

	<%= render 'shared/error_messages', object: @topic %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_area :content %>

	<%= f.submit "Post new topic", class: "button submit" %>
	<% end %>
</div>