<% provide(:title, "#{@board.title} | #{@topic.title}") %>
<h1><%= link_to "Forums", boards_path %> > <%= link_to "#{@topic.board.title}", @topic.board %> > <%= @topic.title %></h1>

<div >

	<%= will_paginate @posts %>
	<br/><br/>

	<table class="posts">
		<tr>
			<th class="header-author">Author</th>
			<th class="header-message">Message</th>
		</tr>
		<%= render @posts %>
	</table>

	<br/>
	<%= will_paginate @posts %>

	<% if signed_in? %>
	<%= button_to "Create new post", new_topic_post_path(@topic), :method => :get %>
	<% end %>

</div>
